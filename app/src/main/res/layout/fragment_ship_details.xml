<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.ship.shiptabbed.ShipDetailsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivNaveDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/label_item_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logodark2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivNaveDT">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHP"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#CFCFCF"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/lblHP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_nave_details_hp" />

                        <TextView
                            android:id="@+id/txtHpDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_txt"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvVeloc"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#CFCFCF"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/lblVeloc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_nave_details_speed" />

                        <TextView
                            android:id="@+id/txtVelocDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_txt"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvCarga"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#CFCFCF"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/lblCarga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_nave_details_cargo" />

                        <TextView
                            android:id="@+id/txtCargaDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_txt"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvHab"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#CFCFCF"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/lblHab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_nave_details_ability" />

                        <TextView
                            android:id="@+id/txtHabDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_txt"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvBonus"
                    android:layout_width="310dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#CFCFCF"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/lblBonus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_nave_details_bonus" />

                        <TextView
                            android:id="@+id/txtBonusDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_txt"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvLasers"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#CFCFCF"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/lblLasers"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_nave_details_lasers" />

                        <TextView
                            android:id="@+id/txtLasersDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_txt"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvGeradores"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#CFCFCF"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/lblGeradores"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_nave_details_generators" />

                        <TextView
                            android:id="@+id/txtGeradoresDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_txt"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvExtras"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    app:cardBackgroundColor="#CFCFCF"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/lblExtras"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_nave_details_extras" />

                        <TextView
                            android:id="@+id/txtExtrasDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_txt"
                            android:textSize="12sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvModulos"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="#CFCFCF"
                    app:cardCornerRadius="4dp"
                    app:contentPadding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="2dp">

                        <TextView
                            android:id="@+id/lblModulos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_nave_details_modules" />

                        <TextView
                            android:id="@+id/txtModulosDT"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_txt"
                            android:textSize="12sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>